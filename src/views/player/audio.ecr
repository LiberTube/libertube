<audio id="player" class="video-js" data-setup="{}" style="width:100%;" controls>
    <% adaptive_fmts.each do |fmt| %>
        <% url = fmt["url"]? %>
        <% type = fmt["type"]? ? fmt["type"].to_s.split(";")[0] : "" %>
        <% if type.starts_with?("audio") %>
        <source src="<%= url %>" type="<%= type %>">
        <% end %>
    <% end %>
</audio>